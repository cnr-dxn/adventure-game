Door::Door()
{
	orientation = 0;
	westRoom = 0;
	eastRoom = 0;
	northRoom = 0;
	southRoom = 0;
}
	
Door::Door(int orientation_, int westRoom_, int eastRoom_, int northRoom_, int southRoom_)
{
	
	orientation = orientation_;
	westRoom = westRoom_;
	eastRoom = eastRoom_;
	northRoom = northRoom_;
	southRoom = southRoom_;
}

// ********************************************************************************************************

void Door::setOrientation(int orientation_)
{
	orientation = orientation_;
}

void Door::setWestRoom(int westRoom_)
{
	westRoom = westRoom_;
}

void Door::setEastRoom(int eastRoom_)
{
	
	eastRoom = eastRoom_;
}

void Door::setNorthRoom(int northRoom_)
{
	northRoom = northRoom_;
}

void Door::setSouthRoom(int southRoom_)
{
	southRoom = southRoom_;
}

//********************************************************************************************************

int Door::getOrientation()
{
	return orientation;
}

int Door::getWestRoom()
{
	return westRoom;
}

int Door::getEastRoom()
{
	return eastRoom;
}

int Door::getNorthRoom()
{
	return northRoom;
}

int Door::getSouthRoom()
{
	return southRoom;
}


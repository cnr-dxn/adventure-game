Room::Room()
{
	ifVisited = false;
	ifSolved = false;
	xLocation = 0;
	yLocation  = 0;
	westDoor = 0;
	eastDoor = 0;
	northDoor = 0;
	southDoor = 0;
}

Room::Room(bool ifVisited_, bool ifSolved_, int xLocation_, int yLocation_, int westDoor_, int eastDoor_, int northDoor_, int southDoor_)
{
	ifVisited = ifVisited_;
	ifSolved = ifSolved_;
	xLocation = xLocation_;
	yLocation = yLocation_;
	westDoor = westDoor_;
	eastDoor = eastDoor_;
	northDoor = northDoor_;
	southDoor = southDoor_;
}

